server {
    listen 8080;
    server_name localhost;
    root /var/www/daemon-space;
    index index.html;

    location / {
        try_files $uri $uri/ =404; # Corrected line
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
    }

    # Additional configurations...
}

/////////////////////////////////////////////////////

<?php
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Handle file uploads
    if (isset($_FILES['uploaded_file'])) {
        $target_dir = "/path/to/your/folder/";
        $target_file = $target_dir. basename($_FILES["uploaded_file"]["name"]);
        move_uploaded_file($_FILES["uploaded_file"]["tmp_name"], $target_file);
    }
    // Handle file deletions
    elseif (isset($_GET['delete']) && isset($_GET['filename'])) {
        $file_path = "/path/to/your/folder/". $_GET['filename'];
        unlink($file_path);
    }
}
?>
